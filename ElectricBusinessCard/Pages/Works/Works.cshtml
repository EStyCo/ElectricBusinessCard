@page "/works"
@using ElectricBusinessCard.Models.Enums
@using ElectricBusinessCard.Pages.Shared.Components
@model ElectricBusinessCard.Pages.Works.WorksModel
@{
    ViewData["Title"] = "Услуги";
}

<div class="text-center p-2">

    <partial name="Shared/Components/_WorksHeader" />

    @if (Model.ElectroWorks?.Any() == true)
    {
        <form method="post" asp-page-handler="DownloadPrice">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-arrow-up me-2"></i>Скачать Excel
            </button>
        </form>

        <div class="table-responsive rounded-3 shadow-sm">
            <table class="table table-bordered table-hover mb-0">
                @{
                    var groupedWorks = Model.ElectroWorks
                        .GroupBy(w => w.Category.CategoryIndex)
                        .OrderBy(g => g.First().Category.CategoryIndex);

                    foreach (var categoryGroup in groupedWorks)
                    {
                        var category = categoryGroup.First().Category;
                        var worksInCategory = categoryGroup.OrderBy(w => w.WorkIndex).ToList();

                        <thead class="table-dark align-middle">
                            <tr>
                                <th colspan="4" class="text-center">
                                    @category.Name
                                    @if (!string.IsNullOrEmpty(category.Description))
                                    {
                                        <span tabindex="0"
                                              class="ms-2 text-primary"
                                              style="cursor: help;"
                                              data-bs-toggle="popover"
                                              data-bs-trigger="hover focus"
                                              data-bs-content="@category.Description">
                                            <i class="fas fa-question-circle"></i>
                                        </span>
                                    }
                                </th>
                            </tr>
                            <tr class="align-middle">
                                <th class="text-center">Название</th>
                                <th class="text-center">Ед. измерения</th>
                                <th class="text-center">Цена (руб)</th>
                                <th class="text-center" width="120">Действия</th>
                            </tr>
                        </thead>

                        // Тело таблицы для всех услуг категории
                        <tbody>
                            @foreach (var work in worksInCategory)
                            {
                                <tr>
                                    <td>
                                        @work.Name
                                        @if (!string.IsNullOrEmpty(work.Description))
                                        {
                                            <span tabindex="0"
                                                  class="ms-2 text-primary"
                                                  style="cursor: help;"
                                                  data-bs-toggle="popover"
                                                  data-bs-trigger="hover focus"
                                                  data-bs-placement="right"
                                                  data-bs-content="@work.Description">
                                                <i class="fas fa-question-circle"></i>
                                            </span>
                                        }
                                    </td>
                                    <td>@work.Unit.GetDisplayName()</td>
                                    <td>@work.PriceInRubles.ToString("N0")</td>
                                    <td>
                                        <partial name="Shared/Components/_WorksTest" model="@work" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }
                }
            </table>
        </div>
    }
    else
    {
        <div class="bg-light border rounded p-4 mt-4 text-center">
            <h4 class="text-muted mb-3">
                <i class="fas fa-info-circle me-2"></i>Услуги отсутствуют
            </h4>
            <p class="text-muted mb-0">В настоящее время список услуг пуст. Пожалуйста, проверьте позже.</p>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Инициализация popover
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
            var popoverList = popoverTriggerList.map(function (element) {
                return new bootstrap.Popover(element, {
                    trigger: 'focus'
                })
            });

            // Альтернатива для tooltip (если popover не работает)
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (element) {
                return new bootstrap.Tooltip(element)
            });
        });
    </script>
}